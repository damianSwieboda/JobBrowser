mixin item(title, url)
  li
    a(href=url class=path == url ? 'active' : '')=title 

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/styles.css')

    title Document
  body
    h1='Job browser'
    
    -if (title=='Login' || title=='Sign in' || title=='Forget password')
      nav
        ul
          +item('About', '/about')
          +item('Login', '/')
          +item('Sign in', '/register')
    -else 
      nav
        ul
          +item('About', '/about')
          +item('Browse', '/browse')
          +item('Saved', '/saved')
          +item('Data', '/data')
          +item('Account', '/account')

    block content
    script(src='/js/loginAndRegister.js')

